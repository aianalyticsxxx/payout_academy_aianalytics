// ==========================================
// PAYOUT ACADEMY - DATABASE SCHEMA
// ==========================================
// Run: npx prisma db push
// ==========================================

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// ==========================================
// AUTHENTICATION (NextAuth.js)
// ==========================================

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ==========================================
// USER PROFILE
// ==========================================

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  hashedPassword String?
  
  // Custom profile fields
  username      String?   @unique
  avatar        String    @default("ðŸŽ²")
  tier          String    @default("Bronze")
  
  // Subscription
  stripeCustomerId       String?   @unique
  stripeSubscriptionId   String?
  stripePriceId          String?
  stripeCurrentPeriodEnd DateTime?
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts      Account[]
  sessions      Session[]
  bets          Bet[]
  bankrollHistory BankrollHistory[]
  leaderboardEntry GlobalLeaderboard?
  pushSubscription PushSubscription?
}

// ==========================================
// BETTING
// ==========================================

model Bet {
  id          String   @id @default(cuid())
  userId      String
  
  // Event details
  eventId     String?  // External event ID for auto-settlement
  sport       String
  league      String?
  matchup     String
  
  // Bet details
  betType     String   // spread, moneyline, totals, prop
  selection   String
  odds        String   // Original odds string (-110, +150)
  oddsDecimal Float    // Decimal odds for calculations
  stake       Float
  
  // Results
  result      String   @default("pending") // pending, won, lost, push
  profitLoss  Float?
  
  // Meta
  notes       String?
  createdAt   DateTime @default(now())
  settledAt   DateTime?
  
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([result])
  @@index([eventId])
  @@index([createdAt])
}

model BankrollHistory {
  id        String   @id @default(cuid())
  userId    String
  balance   Float
  change    Float    @default(0)
  note      String?
  createdAt DateTime @default(now())
  
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([createdAt])
}

// ==========================================
// AI PREDICTIONS
// ==========================================

model AIPrediction {
  id              String   @id @default(cuid())
  
  // Event info
  eventId         String
  eventName       String
  sport           String?
  league          String?
  homeTeam        String?
  awayTeam        String?
  commenceTime    DateTime?
  
  // AI Analysis
  consensusVerdict String?  // STRONG BET, SLIGHT EDGE, RISKY, AVOID
  consensusScore   Float?
  betVotes        Int      @default(0)
  passVotes       Int      @default(0)
  aiVotes         Json     // Array of individual AI responses
  
  // Bet details if applicable
  betSelection    String?
  betOdds         Float?
  
  // Results
  result          String   @default("pending") // pending, won, lost, push
  actualScore     String?  // Final score
  
  createdAt       DateTime @default(now())
  settledAt       DateTime?

  @@index([eventId])
  @@index([result])
  @@index([createdAt])
}

model AILeaderboard {
  id               String   @id @default(cuid())
  agentId          String   @unique // claude, chatgpt, gemini, grok, llama, copilot, perplexity
  agentName        String
  emoji            String
  
  // Stats
  wins             Int      @default(0)
  losses           Int      @default(0)
  pushes           Int      @default(0)
  totalPredictions Int      @default(0)
  
  // Performance
  winRate          Float    @default(0)
  roi              Float    @default(0)
  
  // Streaks
  currentStreak    Int      @default(0)
  bestStreak       Int      @default(0)
  worstStreak      Int      @default(0)
  
  // Accuracy weighting
  voteWeight       Float    @default(1.0)
  
  updatedAt        DateTime @updatedAt

  @@index([winRate])
}

// ==========================================
// USER COMPETITION
// ==========================================

model GlobalLeaderboard {
  id            String   @id @default(cuid())
  userId        String   @unique
  
  // Stats
  wins          Int      @default(0)
  losses        Int      @default(0)
  pushes        Int      @default(0)
  totalBets     Int      @default(0)
  
  // Performance
  totalProfit   Float    @default(0)
  totalStaked   Float    @default(0)
  roi           Float    @default(0)
  winRate       Float    @default(0)
  
  // Streaks
  currentStreak Int      @default(0)
  bestStreak    Int      @default(0)
  
  // Ranking
  rank          Int?
  tier          String   @default("Bronze")
  
  updatedAt     DateTime @updatedAt
  
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([rank])
  @@index([roi])
  @@index([winRate])
}

// ==========================================
// PUSH NOTIFICATIONS
// ==========================================

model PushSubscription {
  id           String   @id @default(cuid())
  userId       String   @unique
  endpoint     String   @db.Text
  p256dh       String
  auth         String
  createdAt    DateTime @default(now())
  
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// ==========================================
// RATE LIMITING / USAGE
// ==========================================

model UsageLog {
  id        String   @id @default(cuid())
  userId    String?
  ipAddress String?
  endpoint  String
  createdAt DateTime @default(now())

  @@index([userId, createdAt])
  @@index([ipAddress, createdAt])
}
