// ==========================================
// PAYOUT ACADEMY - DATABASE SCHEMA
// ==========================================
// Run: npx prisma db push
// ==========================================

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// Note: If using Supabase connection pooling, ensure DATABASE_URL includes:
// ?pgbouncer=true&connection_limit=1

// ==========================================
// AUTHENTICATION (NextAuth.js)
// ==========================================

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ==========================================
// USER SESSIONS (Active Sessions Tracking)
// ==========================================

model UserSession {
  id           String   @id @default(cuid())
  userId       String

  // Session info
  sessionToken String   @unique

  // Device/Browser info
  userAgent    String?
  browser      String?
  os           String?
  device       String?  // desktop, mobile, tablet

  // Location
  ipAddress    String?
  city         String?
  country      String?

  // Activity
  lastActivity DateTime @default(now())
  createdAt    DateTime @default(now())

  // Current session flag (set via JWT or cookie check)
  isCurrent    Boolean  @default(false)

  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([sessionToken])
  @@index([lastActivity])
}

// ==========================================
// USER PROFILE
// ==========================================

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  hashedPassword String?

  // Custom profile fields
  username      String?   @unique
  avatar        String    @default("ðŸŽ²")
  tier          String    @default("Bronze")

  // Personal information
  phoneNumber   String?
  dateOfBirth   DateTime?
  country       String?
  timezone      String?

  // KYC & Verification
  kycStatus     String    @default("unverified") // unverified, pending, verified, rejected
  kycSubmittedAt DateTime?
  kycVerifiedAt DateTime?

  // Last login tracking
  lastLoginAt   DateTime?
  lastLoginIp   String?
  lastLoginLocation String?

  // Role-based access control
  role          String    @default("USER") // USER, ADMIN, SUPER_ADMIN
  roleUpdatedAt DateTime?
  roleUpdatedBy String?

  // Two-Factor Authentication
  twoFactorEnabled  Boolean   @default(false)
  twoFactorSecret   String?   // Encrypted TOTP secret
  twoFactorBackupCodes String? // Encrypted backup codes JSON
  twoFactorAttempts Int       @default(0) // Failed 2FA attempts
  twoFactorLockedUntil DateTime? // 2FA lockout timestamp

  // Subscription
  stripeCustomerId       String?   @unique
  stripeSubscriptionId   String?
  stripePriceId          String?
  stripeCurrentPeriodEnd DateTime?

  // Referral system
  referralCode      String?   @unique  // User's unique referral code
  referredBy        String?            // ID of user who referred this user
  referralRewards   Float     @default(0)  // Total earned from referrals
  referralDiscount  Float     @default(0)  // Discount earned from being referred (10% off first purchase)

  // Account status
  isBanned          Boolean   @default(false)
  bannedAt          DateTime?
  bannedBy          String?
  banReason         String?

  // Account lockout (brute force protection)
  failedLoginAttempts Int       @default(0)
  lastFailedLogin     DateTime?
  lockedUntil         DateTime?

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts      Account[]
  sessions      Session[]
  userSessions  UserSession[]
  bets          Bet[]
  parlays       Parlay[]
  bankrollHistory BankrollHistory[]
  leaderboardEntry GlobalLeaderboard?
  pushSubscription PushSubscription?
  challenges    Challenge[]
  adminLogs     AdminLog[]  @relation("AdminActions")
  pendingPayments PendingPayment[]
  payoutRequests PayoutRequest[]
  referrals     Referral[]  @relation("Referrer")
  referredUsers Referral[]  @relation("Referred")
}

// ==========================================
// BETTING
// ==========================================

model Bet {
  id          String   @id @default(cuid())
  userId      String
  
  // Event details
  eventId     String?  // External event ID for auto-settlement
  sport       String
  league      String?
  matchup     String
  
  // Bet details
  betType     String   // spread, moneyline, totals, prop
  selection   String
  odds        String   // Original odds string (-110, +150)
  oddsDecimal Float    // Decimal odds for calculations
  stake       Float
  
  // Results
  result      String   @default("pending") // pending, won, lost, push
  profitLoss  Float?
  
  // Meta
  notes       String?
  createdAt   DateTime @default(now())
  settledAt   DateTime?
  
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  challengeBet ChallengeBet?

  @@index([userId])
  @@index([result])
  @@index([eventId])
  @@index([createdAt])
}

model BankrollHistory {
  id        String   @id @default(cuid())
  userId    String
  balance   Float
  change    Float    @default(0)
  note      String?
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([createdAt])
}

// ==========================================
// PARLAYS
// ==========================================

model Parlay {
  id           String      @id @default(cuid())
  userId       String

  // Parlay details
  stake        Float
  totalOdds    Float       // Combined odds (multiplied)

  // Results
  result       String      @default("pending") // pending, won, lost, push
  profitLoss   Float?

  // Meta
  notes        String?
  createdAt    DateTime    @default(now())
  settledAt    DateTime?

  user         User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  legs         ParlayLeg[]

  @@index([userId])
  @@index([result])
  @@index([createdAt])
}

model ParlayLeg {
  id          String   @id @default(cuid())
  parlayId    String

  // Event details
  eventId     String?
  sport       String
  league      String?
  matchup     String

  // Bet details
  betType     String
  selection   String
  odds        String
  oddsDecimal Float

  // Results
  result      String   @default("pending") // pending, won, lost, push

  parlay      Parlay   @relation(fields: [parlayId], references: [id], onDelete: Cascade)

  @@index([parlayId])
  @@index([eventId])
}

// ==========================================
// AI PREDICTIONS
// ==========================================

model AIPrediction {
  id              String   @id @default(cuid())
  
  // Event info
  eventId         String
  eventName       String
  sport           String?
  league          String?
  homeTeam        String?
  awayTeam        String?
  commenceTime    DateTime?
  
  // AI Analysis
  consensusVerdict String?  // STRONG BET, SLIGHT EDGE, RISKY, AVOID
  consensusScore   Float?
  betVotes        Int      @default(0)
  passVotes       Int      @default(0)
  aiVotes         Json     // Array of individual AI responses
  
  // Bet details if applicable
  betSelection    String?
  betOdds         Float?
  
  // Results
  result          String   @default("pending") // pending, won, lost, push
  actualScore     String?  // Final score
  
  createdAt       DateTime @default(now())
  settledAt       DateTime?

  @@index([eventId])
  @@index([result])
  @@index([createdAt])
}

model AILeaderboard {
  id               String   @id @default(cuid())
  agentId          String   @unique // claude, chatgpt, gemini, grok, llama, copilot, perplexity
  agentName        String
  emoji            String
  
  // Stats
  wins             Int      @default(0)
  losses           Int      @default(0)
  pushes           Int      @default(0)
  totalPredictions Int      @default(0)
  
  // Performance
  winRate          Float    @default(0)
  roi              Float    @default(0)
  
  // Streaks
  currentStreak    Int      @default(0)
  bestStreak       Int      @default(0)
  worstStreak      Int      @default(0)
  
  // Accuracy weighting
  voteWeight       Float    @default(1.0)
  
  updatedAt        DateTime @updatedAt

  @@index([winRate])
}

// ==========================================
// USER COMPETITION
// ==========================================

model GlobalLeaderboard {
  id            String   @id @default(cuid())
  userId        String   @unique
  
  // Stats
  wins          Int      @default(0)
  losses        Int      @default(0)
  pushes        Int      @default(0)
  totalBets     Int      @default(0)
  
  // Performance
  totalProfit   Float    @default(0)
  totalStaked   Float    @default(0)
  roi           Float    @default(0)
  winRate       Float    @default(0)
  
  // Streaks
  currentStreak Int      @default(0)
  bestStreak    Int      @default(0)
  
  // Ranking
  rank          Int?
  tier          String   @default("Bronze")
  
  updatedAt     DateTime @updatedAt
  
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([rank])
  @@index([roi])
  @@index([winRate])
}

// ==========================================
// PUSH NOTIFICATIONS
// ==========================================

model PushSubscription {
  id           String   @id @default(cuid())
  userId       String   @unique
  endpoint     String   @db.Text
  p256dh       String
  auth         String
  createdAt    DateTime @default(now())
  
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// ==========================================
// RATE LIMITING / USAGE
// ==========================================

model UsageLog {
  id        String   @id @default(cuid())
  userId    String?
  ipAddress String?
  endpoint  String
  createdAt DateTime @default(now())

  @@index([userId, createdAt])
  @@index([ipAddress, createdAt])
}

// ==========================================
// CHALLENGES
// ==========================================

model Challenge {
  id            String   @id @default(cuid())
  userId        String

  // Challenge tier info
  tier          Int      // 1000, 5000, 10000, 25000, 50000, 100000
  difficulty    String   @default("beginner") // beginner, pro
  minOdds       Float    @default(1.5) // 1.5 for beginner, 2.0 for pro
  cost          Float    // Purchase price paid
  resetFee      Float    // 50% reset fee

  // Status
  status        String   @default("active") // active, completed, expired, cancelled

  // Progress tracking
  currentStreak Int      @default(0)
  currentLevel  Int      @default(1)  // 1, 2, 3, 4

  // Level completion flags
  level1Completed Boolean @default(false)
  level2Completed Boolean @default(false)
  level3Completed Boolean @default(false)
  level4Completed Boolean @default(false)

  // Financial tracking
  totalRewardsEarned Float @default(0)

  // Timing
  purchasedAt   DateTime @default(now())
  expiresAt     DateTime // purchasedAt + 45 days
  completedAt   DateTime?

  // Relations
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  bets          ChallengeBet[]
  rewards       ChallengeReward[]

  @@index([userId])
  @@index([status])
  @@index([expiresAt])
}

model ChallengeBet {
  id            String   @id @default(cuid())
  challengeId   String
  betId         String   @unique

  // Snapshot at bet placement
  streakBefore  Int
  levelBefore   Int

  // After settlement
  result        String?  // won, lost, push
  streakAfter   Int?
  levelAfter    Int?
  levelCompleted Int?    // If this bet completed a level

  createdAt     DateTime @default(now())
  settledAt     DateTime?

  challenge     Challenge @relation(fields: [challengeId], references: [id], onDelete: Cascade)
  bet           Bet       @relation(fields: [betId], references: [id], onDelete: Cascade)

  @@index([challengeId])
  @@index([betId])
}

model ChallengeReward {
  id            String   @id @default(cuid())
  challengeId   String

  level         Int      // 1, 2, 3, 4
  amount        Float    // Reward amount
  status        String   @default("pending") // pending, paid

  earnedAt      DateTime @default(now())
  paidAt        DateTime?

  challenge     Challenge @relation(fields: [challengeId], references: [id], onDelete: Cascade)

  @@index([challengeId])
  @@index([status])
}

// ==========================================
// CRM & ADMIN
// ==========================================

model DailyMetrics {
  id                    String   @id @default(cuid())
  date                  DateTime @unique @db.Date

  // User metrics
  totalUsers            Int      @default(0)
  newUsers              Int      @default(0)
  activeUsers           Int      @default(0)

  // Revenue metrics
  challengesPurchased   Int      @default(0)
  revenueTotal          Float    @default(0)
  revenueByTier         Json     // { "1000": 60, "5000": 198, ... }

  // Betting metrics
  totalBets             Int      @default(0)
  totalParlays          Int      @default(0)
  totalStaked           Float    @default(0)

  // Challenge metrics
  activeChallenges      Int      @default(0)
  completedChallenges   Int      @default(0)
  expiredChallenges     Int      @default(0)
  rewardsPaid           Float    @default(0)
  rewardsPending        Float    @default(0)

  createdAt             DateTime @default(now())

  @@index([date])
}

model AdminLog {
  id          String   @id @default(cuid())
  adminId     String
  action      String   // VIEW_DASHBOARD, SETTLE_BET, UPDATE_USER, PAY_REWARD, etc.
  targetType  String?  // USER, BET, CHALLENGE, REWARD
  targetId    String?
  metadata    Json?
  ipAddress   String?
  createdAt   DateTime @default(now())

  admin       User     @relation("AdminActions", fields: [adminId], references: [id], onDelete: Cascade)

  @@index([adminId, createdAt])
  @@index([action, createdAt])
  @@index([targetType, targetId])
}

// ==========================================
// PENDING PAYMENTS (Crypto/Stripe tracking)
// ==========================================

model PendingPayment {
  id          String   @id @default(cuid())
  userId      String

  // Payment details
  tier        Int
  difficulty  String   @default("beginner")
  amount      Float
  currency    String   @default("USD")

  // Provider info
  provider    String   // 'stripe' or 'confirmo'
  externalId  String?  // Stripe session ID or Confirmo invoice ID

  // Status
  status      String   @default("pending") // pending, paid, expired, failed

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  paidAt      DateTime?

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([externalId])
  @@index([status])
}

// ==========================================
// PAYOUT REQUESTS (Withdrawals)
// ==========================================

model PayoutRequest {
  id              String   @id @default(cuid())
  userId          String

  // Amount
  amount          Float    // Amount requested
  currency        String   @default("EUR")

  // Payment method
  paymentMethod   String   // 'bank', 'paypal', 'crypto'
  paymentDetails  Json     // { iban, accountName } or { paypalEmail } or { walletAddress, network }

  // Status
  status          String   @default("pending") // pending, processing, completed, rejected
  rejectionReason String?

  // Processing
  processedBy     String?  // Admin who processed
  processedAt     DateTime?
  transactionId   String?  // External transaction reference

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([status])
  @@index([createdAt])
}

// ==========================================
// REFERRAL SYSTEM
// ==========================================

model Referral {
  id              String   @id @default(cuid())

  referrerId      String   // User who referred
  referredId      String   // User who was referred

  // Reward tracking
  status          String   @default("pending") // pending, qualified, paid
  rewardAmount    Float    @default(0)  // Reward earned (paid when referred user makes first purchase)

  // The challenge that triggered the reward
  challengeId     String?  // First challenge purchased by referred user

  // Custom link tracking
  customLinkId    String?  // If referred via custom link

  createdAt       DateTime @default(now())
  qualifiedAt     DateTime?  // When referred user made first purchase
  paidAt          DateTime?  // When reward was paid to referrer

  referrer        User     @relation("Referrer", fields: [referrerId], references: [id], onDelete: Cascade)
  referred        User     @relation("Referred", fields: [referredId], references: [id], onDelete: Cascade)
  customLink      CustomReferralLink? @relation(fields: [customLinkId], references: [id])

  @@unique([referrerId, referredId])
  @@index([referrerId])
  @@index([referredId])
  @@index([status])
  @@index([customLinkId])
}

// Custom referral links for marketing campaigns
model CustomReferralLink {
  id              String   @id @default(cuid())

  // Custom slug (e.g., "summer2024", "youtube", "twitter-promo")
  slug            String   @unique

  // Link details
  name            String   // Display name for admin
  description     String?  // Campaign description

  // Custom rewards (override defaults)
  referrerReward  Float    @default(0.15) // 15% default
  referredDiscount Float   @default(0.15) // 15% default

  // Attribution
  createdBy       String?  // Admin who created

  // Stats
  clicks          Int      @default(0)
  signups         Int      @default(0)
  conversions     Int      @default(0)
  totalRevenue    Float    @default(0)

  // Status
  isActive        Boolean  @default(true)
  expiresAt       DateTime?

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  referrals       Referral[]

  @@index([slug])
  @@index([isActive])
  @@index([createdAt])
}
